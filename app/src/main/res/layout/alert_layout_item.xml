<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:background="#FFFFBB33"
        android:text="Item Name"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        tools:textColor="@android:color/black"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"/>
    <TextView
        android:id="@+id/detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Lorem ipsum bla bla bal whdsh jcvs chj cvq hj cvc jbscjksc jknkj"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/detail_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Price"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/detail_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Stock : xxxxx"
        android:textSize="25sp"
        tools:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp">
        <ImageView
            android:id="@+id/detail_remove"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_weight="4"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/item_remove" />
        <TextView
            android:id="@+id/detail_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="20"
            android:textSize="35sp"
            android:textAlignment="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            tools:textColor="@android:color/black"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/detail_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_weight="4"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/item_add" />
    </LinearLayout>
</LinearLayout>